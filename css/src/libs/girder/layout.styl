
/* ==========================================================================
   Layout
   ========================================================================== */


/* layout classes
   ========================================================================== */

*,
*:after,
*:before
	-webkit-box-sizing: border-box
	-moz-box-sizing: border-box
	box-sizing: border-box

.clearfix:before,
.clearfix:after
	content: ""
	display: table
 
.clearfix:after
	clear: both

.clearfix
	zoom: 1

.fl
	float: left

.fr
	float: right

.posRel
	position: relative

.alignLeft
	left: 0

.alignRight
	right: 0

.hidden
	display: none

.visible
	visibility: visible

.invisible
	visibility: hidden

.centered
	display: block
	margin-left: auto
	margin-right: auto


/* Layout Mixins
   ========================================================================== */

stickyFooter(footerHeight)
	
	html, body
		height: 100%

	#wrap
		min-height: 100%
		height: auto !important
		height: 100%
		margin: 0 auto -(footerHeight)

	.footer,
	footer
		position: relative
		clear:both

	#push,
	.footer,
	footer
		height: footerHeight

	.footer,
	footer
		margin-top: -(footerHeight)