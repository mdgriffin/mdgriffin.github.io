
@import "nib"

@import "libs/normalize"

@import "libs/girder/defaults"

@import "libs/girder/color"

@import "libs/girder/elements/list"

@import "libs/girder/elements/button"

@import "libs/girder/elements/table"

@import "libs/girder/elements/form"

@import "libs/girder/typography"

@import "libs/girder/layout"

@import "libs/girder/grid"

@import "libs/fontello"

@import "libs/fancyselect"

$color_primary = #20a140
$color_secondary = #404450

/* Typography */

body
	font-family: 'Open Sans', sans-serif
	color: blk(54%)
	position: relative

h1,h2,h3,h4
	color: blk(87%)

a
	color: #005e9d
	
	&:visited
		color: darken(#005e9d,5)
	

::selection
	background: #999999
	color: #fff

::-moz-selection
	background: #999999
	color: #fff

.btn--primary
	background: $color_primary
	color: contrast_font($color_primary)
	transition: background 0.3s

	&:hover
		background: darken($color_primary,5)

.btn--secondary
	background: $color_secondary
	color: contrast_font($color_secondary)
	transition: background 0.3s

	&:hover
		background: darken($color_secondary,5)

.cursorNextArrow:hover
	cursor: url('../img/next-arrow.png'), auto

.cursorPrevArrow:hover
	cursor: url('../img/prev-arrow.png'), auto

/* styles */

.sidebar
	position: fixed
	position: fixed
	height: 100%
	width: 320px

	overflow: hidden

	background: #fff
	box-shadow: 1px 0 3px rgba(0,0,0,0.2)
	z-index: 2
	

.sidebar-inner
	position: absolute
	top: 0
	left: 0
	right: -15px
	bottom: 0
	overflow-y: scroll

.sidebar-nav
	margin: 60px 0 150px 0

	ul
		margin: 0
		padding: 0

		li
			list-style: none
			

			&.active a:after
				transform: translateY(0)
				color: blk(95%)

		a
			margin-top: -1px
			color: #757575
			text-decoration: none
			padding: 20px 30px
			border-top: 1px solid #eaeaea
			border-bottom: 1px solid #eaeaea
			position: relative
			overflow: hidden

			&:hover

				&:after
					color: blk(95%)
					transform: translateY(0)

			&:after
				content: attr(data-text)
				position: absolute
				top: 0
				left: 0
				right: 0
				bottom: 0
				background: #eaeaea
				padding: 20px 30px
				transition: transform 0.4s
				transform: translateY(100%)
				transform-origin: 0 0

.sidebar-socialLinks
	position: absolute
	bottom: auto
	left: 0
	right: 0
	padding: 1em 0
	background: #fff

	table
		width: 100%
		margin: 0
	a
		display: block
		margin: 0 auto
		text-align: center
		text-decoration: none
		overflow: hidden
		background: #fff
		border-radius: 50%
		width: 50px
		height: 50px
		line-height: 50px
		transition: color 0.5s, border 0.5s
		border: 2px solid #ccc
		color: #cccccc

		&.icon-twitter

			&:hover
				color: #4099ff
				border: 2px solid #4099ff

		&.icon-gplus
			
			&:hover
				color: #d73d32
				border: 2px solid #d73d32

		&:hover
			border: 2px solid #000
			color: #000

			&:before
				animation: toRightFromLeft 0.5s forwards

@keyframes toRightFromLeft
	49%
		transform: translate(300%)

	50%
		opacity: 0
		transform: translate(-300%)

	51%
		opacity: 1

.sidebar-logo
	background: $color_primary
	padding: 2em
	text-align: center

	a
		text-decoration: none

	img
		display: block
		margin: 0 auto

	p
		color: wht(90%)
		margin: 1em 0 0 0

.content
	padding-left: 320px

@media screen and (max-width: 64em)

	.sidebar
		position: static
		width: 100%
		padding-bottom: 0

	.sidebar-inner
		position: static
		overflow-y: auto

	.content
		padding-left: 0

	.sidebar-nav
		margin: 0

	.sidebar-socialLinks
		position: static

.section
	position: relative
	padding-bottom: 140px
	padding-left: 2rem
	padding-right: 2rem

.section-title
	position: relative
	display: inline-block

	&:after
		content: ""
		position: absolute
		width: 75%
		bottom: 0
		left: 0
		height: 3px
		background: $color_primary

.section--white
	background: #fff

.section--grey
	background: #f2f2f1

.section-decoration--white
	fill: #fff
	stroke: none

.section-decoration--grey
	fill: #f2f2f1
	stroke: none

.section-decoration-top
	position: absolute
	width: 100%
	height: 140px
	left: 0
	bottom: 100%
	//z-index: 1
	pointer-events: none

.section-decoration-bottom
	position: absolute
	width: 100%
	height: 140px
	left: 0
	//z-index: 1
	pointer-events: none

.banner
	background-color: #404450
	position: relative

	h1
		position: relative
		color: #fff
		display: inline-block
		font-size: 4em
		margin: 2em
		z-index: 50

@media screen and (max-width: 75em)

	.banner
		
		h1
			margin: 1em

@media screen and (max-width: 40em)

	.banner
		
		h1
			font-size: 3em

.banner-slider
	position: absolute !important // overwriting pogo slider default
	height: auto !important  // overwriting pogo slider default
	top: 0
	left: 0
	bottom: 0
	right: 0

.work-item
	margin-bottom: 6rem

.work-item-image
	
		display: block
		width: 100%

.work-item-slider:hover .work-item-slider-overlay
	opacity: 0

.work-item-slider-overlay
	position: absolute
	top: 0
	bottom: 0
	left: 0
	right: 0
	background-color: rgba(65,68,80,0.5)
	opacity: 1
	transition: opacity 0.75s
	text-align: center
	padding: 100px 0

	h3
		color: #fff

.is-touchDevice .work-item-slider-overlay
	display: none

.services-item
	background-color: #252b36
	text-align: center
	padding: 3em
	margin-bottom: 1em
	position: relative

	h3
		color: #fff

		&:after,
		&:before
			content: ''
			position: absolute
			width: 20px
			background: $color_primary
			height: 0
			transition: height 0.15s
			
		&:after
			right: 0
			top: 0
			transition-delay: 0.15s
			
		&:before
			left: 0
			bottom: 0
			transition-delay: 0.45s

	span
		color: #fff
		font-size: 32px
	
	&:hover
		&:after,
		&:before
			width: 100%

		&:after
			transition-delay: 0.15s
			
		&:before
			transition-delay: 0.45s

		h3

			&:before,
			&:after
				height: 100%

			&:after
				transition-delay: 0.3s

			&:before
				transition-delay: 0s

	&:after,
	&:before
		content: ''
		position: absolute
		height: 20px
		background: $color_primary
		width: 0
		transition: width 0.15s
		
	&:after
		top: 0
		left: 0
		transition-delay: 0.3s

	&:before
		bottom: 0
		right: 0

.contact
	position: relative

.contact.section
	padding-bottom: 0

.contact-formWrapper
	position: relative
	margin-left: -2rem
	margin-right: -2rem
	padding: 125px 0

.contact-form
	position: relative
	padding-left: 2rem
	padding-right: 2rem
	margin: 0 auto
	z-index: 9999

	fieldset
		margin-top: 2em

		&:first-child
			margin-top: 0
	
	input[type="text"]
		height: 50px
		text-indent: 20px

	textarea
		padding: 20px

	select
		width: 100%

	input[type="text"],
	textarea
		border: none
		font-weight: bold
		box-shadow: 0 1px 2px rgba(0,0,0,0.15)

		&:focus
			outline: none

.contact-form-message {
	padding: 10px;
	box-shadow: 0 1px 2px rgba(0,0,0,0.15)
}

.contact-form-message--success {
	@extend .contact-form-message
	background: #1a921d;
	color: #fff;
}

.contact-form-message--error {
	@extend .contact-form-message
	background: #d83026;
	color: #fff;
}

.contact-form-error {
	margin: 0;
	background: #939393;
	color: #fff;
	padding: 5px 10px;
	box-shadow: 0 1px 2px rgba(0,0,0,0.15)
}

.contact-map
	position: absolute
	top: 0
	left: 0
	right: 0
	bottom: 0

#contact-map
	width: 100%
	height: 650px

::-webkit-input-placeholder
	color: blk(87%)

::-moz-placeholder
	color: blk(87%)

:-ms-input-placeholder
	color: blk(87%)

input:-moz-placeholder
	color: blk(87%)